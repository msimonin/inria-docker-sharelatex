#!/bin/bash

# timeout for the compilation in minute
TIMEOUT=${SHARELATEX_COMPILATION_TIMEOUT:-1}

timeout ${TIMEOUT}m /usr/local/texlive/2015/bin/x86_64-linux/timeout/pdflatex "$@"
lastresult=$?
if [ $lastresult -eq 124 ]
then
   # we double the timeout and stop on the last error
   TIMEOUT=$((TIMEOUT * 2))
   timeout ${TIMEOUT} /usr/local/texlive/2015/bin/x86_64-linux/timeout/pdflatex -halt-on-error "$@"
else
   exit $lastresult
fi
